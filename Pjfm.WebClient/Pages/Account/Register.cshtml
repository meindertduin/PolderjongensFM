@page
@model Pjfm.WebClient.Pages.Account.Register

@{
    ViewData["Title"] = "Register";
    Layout = "Shared/_Layout";
}

<div class="limiter">
	<div class="container-login100">
		<div class="wrap-login100 p-l-85 p-r-85 p-t-55 p-b-55">
			<form method="post" class="login100-form validate-form flex-sb flex-w">
				<input type="hidden" asp-for="Form.ReturnUrl" value="@Model.Form.ReturnUrl"/>
				<div class="login100-form-title p-b-32">
					<img style="max-width: 392px; margin-bottom: 2vh" src="~/images/pjfm.png"></img>
				</div>

				<span class="txt1 p-b-11">
					E-mail
				</span>
				
				<div class="wrap-input100 validate-input m-b-36" data-validate="EmailAddress is required">
					<input type="email" class="input100" id="userNameForm" asp-for="Form.Email"/>
					<span class="focus-input100"></span>
				</div>
				
				<span class="txt1 p-b-11">
                	Voornaam
                </span>
                
                <div class="wrap-input100 validate-input m-b-36">
                	<input type="text" class="input100" id="displayNameForm" asp-for="Form.Username"/>
                	<span class="focus-input100"></span>
                </div>

				<span class="txt1 p-b-11">
					Wachtwoord
				</span>
				<div class="wrap-input100 validate-input m-b-36" data-validate="Password is required">
					<input class="input100" type="password" id="passwordForm" asp-for="Form.Password"/>
					<span class="focus-input100"></span>
				</div>
				
				<span class="txt1 p-b-11">
                	Wachtwoord bevestigen
                </span>
				<div class="wrap-input100 validate-input m-b-36" data-validate="Password is required">
					<input class="input100" type="password" id="confirmPasswordForm" asp-for="Form.ConfirmPassword"/>
                	<span class="focus-input100"></span>
                </div>

				<div class="container-login100-form-btn">
					<input type="submit" class="login100-form-btn" value="Registreren" />
				</div>
			</form>
		</div>
	</div>
</div>