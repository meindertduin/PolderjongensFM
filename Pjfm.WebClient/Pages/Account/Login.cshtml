@page
@model Pjfm.WebClient.Pages.Account.Login

@{
    ViewData["Title"] = "Login";
    Layout = "Shared/_Layout";
}

<div class="limiter">
	<div class="container-login100">
		<div class="wrap-login100 p-l-85 p-r-85 p-t-55 p-b-55">
			<form method="post" class="login100-form validate-form flex-sb flex-w">
				<input type="hidden" asp-for="Form.ReturnUrl" value="@Model.Form.ReturnUrl"/>
				<div class="login100-form-title p-b-32">
					<img style="max-width: 392px; margin-bottom: 2vh" src="~/images/pjfm.png"></img>
				</div>

				<span class="txt1 p-b-11">
					E-mail
				</span>
				
				<div class="wrap-input100 validate-input m-b-36" data-validate="EmailAddress is required">
					<input type="email" class="input100" id="userNameForm" asp-for="Form.EmailAddress"/>
					<span class="focus-input100"></span>
				</div>

				<span class="txt1 p-b-11">
					Wachtwoord
				</span>
				<div class="wrap-input100 validate-input m-b-12" data-validate="Password is required">
					<span class="btn-show-pass">
						<i class="fa fa-eye"></i>
					</span>
					<input class="input100" type="password" id="passwordForm" asp-for="Form.Password"/>
					<span class="focus-input100"></span>
				</div>

				<div class="flex-sb-m w-full p-b-48">
					<div>
						<a href="#" class="txt3">
							Niet geregistreerd? Maak een nieuw account
						</a>
					</div>
				</div>

				<div class="container-login100-form-btn">
					<input type="submit" class="login100-form-btn" value="Inloggen" />
				</div>
			</form>
		</div>
	</div>
</div>



